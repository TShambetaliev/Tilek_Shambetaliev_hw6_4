<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_no_internet"
        android:layout_width="228dp"
        android:layout_height="228dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/no_internet_connect"
        />

    <TextView
        android:id="@+id/tv_no_internet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_connection"
        android:textSize="16sp"
        android:layout_marginTop="22dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/img_no_internet"
        app:layout_constraintStart_toStartOf="@id/img_no_internet"
        app:layout_constraintEnd_toEndOf="@id/img_no_internet"
        />

    <Button
        android:id="@+id/btn_try_again"
        android:layout_width="200dp"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="110dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/again"
        android:backgroundTint="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>